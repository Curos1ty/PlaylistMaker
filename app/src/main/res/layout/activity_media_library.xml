<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/ThemeSearchActivity"
    tools:context=".presentation.ui.MediaLibraryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/media_library_toolbar"
        style="@style/ToolbarBase"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/image_back_arrow"
        app:title="@string/text_media_library" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSecondary"
        app:tabIndicatorColor="?attr/colorSecondary"
        app:tabIndicatorFullWidth="true"
        app:tabTextColor="?attr/colorSecondary"
        app:tabIndicatorHeight="6dp"
        />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>