<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="196dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:paddingStart="@dimen/paddingHorizontal_16dp"
    android:paddingEnd="@dimen/paddingHorizontal_16dp"
    app:cardCornerRadius="@dimen/cardCornerRadius_8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/playlistImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/album_art"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_music" />

        <TextView
            android:id="@+id/playlistTitle"
            style="@style/textItemSongTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text_size_16sp"
            tools:text="Best songs 2021" />

        <TextView
            android:id="@+id/numberTracksPlaylist"
            style="@style/textItemArtistDurationTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="20"
            android:maxLines="1"
            android:textSize="@dimen/text_size_11sp"
            tools:text="98 треков" />
    </LinearLayout>

</LinearLayout>