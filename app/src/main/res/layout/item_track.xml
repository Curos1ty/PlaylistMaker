<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height_61dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/cardCornerRadius_8dp"
    app:cardElevation="4dp">

    <ImageView
        android:id="@+id/songImage"
        android:layout_width="@dimen/layout_wh45dp"
        android:layout_height="@dimen/layout_wh45dp"
        android:layout_marginStart="@dimen/layout_marginStart_13dp"
        android:layout_marginTop="@dimen/layout_margin_top_8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/search" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_margin_top_8dp">

        <TextView
            android:id="@+id/songTitle"
            style="@style/textItemSongTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop_14dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text_size_16sp"
            tools:text="1233333333333333333333333333333333333333" />

        <TextView
            android:id="@+id/songArtist"
            style="@style/textItemArtistDurationTrack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text_size_11sp"
            tools:text="123333333333333333333333333333333333333323213213213123123" />
    </LinearLayout>

    <ImageView
        android:id="@+id/songOpen"
        style="@style/imageArrowForSong"
        android:layout_width="@dimen/layout_wh24dp"
        android:layout_height="@dimen/layout_wh24dp"
        android:layout_marginTop="@dimen/layout_marginTop_18dp"
        android:layout_marginEnd="@dimen/layout_marginEnd_12dp"
        android:src="@drawable/image_arrow_right" />

</LinearLayout>